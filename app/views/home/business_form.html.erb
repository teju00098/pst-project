<div class="container" style="margin-top :30px">
  <div class="card">
   <div class="card-header bg-success"><h2 style="padding:10px">Business Form</h2></div>
     <div class="card-body">

      <%= form_tag(path: 'users/business', html: { method: :post }) do  %>
        <% if flash[:error] %>
          <div class="alert alert-error">
            <%= flash[:error] %>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-sm-2 col-form-label">Business Name</div><br />
          <div class="col-sm-10"><%= text_field_tag :name, '', class: "form-control"%></div>
        </div>

        <div class="form-group row">
          <div class="col-sm-2 col-form-label">Business Unit</div><br />
          <div class="col-sm-10"><%= text_field_tag :unit,'', class: "form-control"%></div>
        </div>

        <div class="actions">
          <%= submit_tag "Update" , class: "btn btn-success" %> <br />
        </div>
      <% end %>
    </div>
  </div>
</div>